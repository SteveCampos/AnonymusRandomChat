<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="5dp"

    android:paddingTop="5dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/balloon_receptor">

        <LinearLayout
            android:id="@+id/chat_company_reply_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:orientation="vertical">

            <TextView
                android:id="@+id/chat_company_reply_author"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="20dp"
                android:paddingRight="8dp"
                android:paddingTop="5dp"
                android:text="Anonymus"
                android:textColor="@color/vimeo_blue"
                android:textSize="16sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/image_view"
                android:layout_width="172dp"
                android:layout_height="172dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:maxWidth="280dp"
                android:src="@drawable/common_google_signin_btn_icon_dark_normal" />

        </LinearLayout>

        <TextView
            android:id="@+id/time_text"
            style="@style/chat_timings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/chat_company_reply_text"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/chat_company_reply_text"
            android:paddingBottom="5dp"
            android:paddingRight="10dp"
            android:text="17:10"
            android:textColor="@color/grey_600" />

    </RelativeLayout>

</RelativeLayout>