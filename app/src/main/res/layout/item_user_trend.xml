<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <android.support.v7.widget.CardView
        android:id="@+id/cardview"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        style="@style/CardViewStyle"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="8dp">

            <ImageView
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:id="@+id/imageview_avatar"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:src="@drawable/girl_2"
                android:contentDescription="avatar" />

            <TextView
                android:id="@+id/text_title"
                style="@style/TextAppearance.AppCompat.Title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="18 Young Girl, Milf Girl"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/imageview_avatar"
                android:layout_toEndOf="@+id/imageview_avatar"
                android:layout_toStartOf="@+id/text_hots"
                android:layout_toLeftOf="@+id/text_hots"
                android:ellipsize="end"
                android:maxLines="1"
                android:textSize="16sp"
                />
            <TextView
                android:id="@+id/text_hots"
                style="@style/TextAppearance.AppCompat.Caption"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="16dp"
                android:text=""
                android:drawableRight="@drawable/ic_whatshot_red_24dp"/>

            <TextView
                android:id="@+id/text_state"
                android:layout_below="@+id/text_title"
                style="@style/TextAppearance.AppCompat.Small"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="El sin sentido es inmanente a la existencia. Anoche encontré a un martir en mi cama, me preguntó, quién soy, que es lo que estoy defendiendo."
                android:layout_alignLeft="@+id/text_title"
                android:layout_alignStart="@+id/text_title"
                android:layout_toStartOf="@+id/text_hots"
                android:layout_toLeftOf="@+id/text_hots"
                android:ellipsize="end"
                android:maxLines="2" />



            <android.support.v7.widget.AppCompatButton
                android:id="@+id/btn_chat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/Widget.AppCompat.Button.Borderless.Colored"
                android:text="@string/historial_action_chat"
                android:layout_below="@+id/text_state"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true">
            </android.support.v7.widget.AppCompatButton>

